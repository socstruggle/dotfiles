# mount vfat format usb to prevent permission denied
sudo mount -o uid=1000,gid=1000 /dev/sdb1 /mnt/ASISGUARD2

# install oracle virtualbox 6 on centos 7
sudo yum update
sudo yum install â€“y patch gcc kernel-headers kernel-devel make perl wget
sudo reboot
sudo wget http://download.virtualbox.org/virtualbox/rpm/el/virtualbox.repo -P /etc/yum.repos.d
sudo yum install VirtualBox-6.0
sudo systemctl status vboxdrv
wget http://download.virtualbox.org/virtualbox/6.0.4/Oracle_VM_VirtualBox_Extension_Pack-6.0.4.vbox-extpack
sudo VBoxManage extpack install Oracle_VM_VirtualBox_Extension_Pack-6.0.4.vbox-extpack

# install iwconfig on centos
sudo yum install wireless-tools

# enable wifi on centos ardadurustpc
sudo tee /etc/modprobe.d/ideapad.conf <<< "blacklist ideapad_laptop"

#
sudo yum install network-manager-applet

# how to enable exfat filesystem on centos
sudo rpm -v --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro
sudo rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sudo yum install exfat-utils fuse-exfat

# how to learn open files of mounted drives
sudo lsof +D /mnt/SanDisk_256GB

# install wireshark on centos
sudo yum install wireshark wireshark-gnome -y

# add domain to firewall whitelist on centos
sudo firewall-cmd --permanent --zone=trusted --add-source=10.230.1.0/24
sudo firewall-cmd --reload

# how to compile opencv4 on centos
mkdir opencv4_build && cd opencv4_build
git clone https://github.com/opencv/opencv.git
git clone https://github.com/opencv/opencv_contrib.git
cd opencv && mkdir build && cd build
git checkout 4.1.1
cmake3 -DCMAKE_BUILD_TYPE=RELEASE -DCMAKE_INSTALL_PREFIX=/usr/local -DWITH_V4L=ON -DBUILD_TESTS=OFF -DBUILD_ZLIB=ON -DBUILD_JPEG=ON -DWITH_JPEG=ON -DWITH_PNG=ON -DBUILD_EXAMPLES=OFF -DINSTALL_C_EXAMPLES=OFF -DINSTALL_PYTHON_EXAMPLES=OFF -DWITH_OPENEXR=OFF -DBUILD_OPENEXR=OFF -DWITH_EIGEN=OFF -DCMAKE_CXX_COMPILER=/home/xilinx/Vivado/2018.3/tps/lnx64/gcc-6.2.0/bin/g++ ..
make -j32
sudo make install

# how to program myir7015 qspi flash
program_flash -target_name jsn-JTAG-HS2-210249A73CF5-4ba00477-0 -f BOOT.bin -fsbl fsbl.elf -flash_type qspi-x4-single -blank_check -verify -url TCP:localhost:3121 -offset 0

# how to set hostname permanently
sudo hostnamectl set-hostname ardadurustpc

# how to config git diff tool
git config --global diff.tool gvimdiff
git config --global --add difftool.prompt false

# how to change boot mode to JTAG from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x0100
rst -system

# how to change boot mode to QUAD-SPI(24b) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x1100 
rst -system

# how to change boot mode to QUAD-SPI(32b) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x2100 
rst -system

# how to change boot mode to SD0(2.0) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x3100 
rst -system

# how to change boot mode to NAND from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x4100 
rst -system

# how to change boot mode to SD1(2.0) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x5100 
rst -system

# how to change boot mode to eMMC(1.8V) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x6100 
rst -system

# how to change boot mode to USB(2.0) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x7100 
rst -system

# how to change boot mode to PJTAG(MIO#0) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x8100 
rst -system

# how to change boot mode to PJTAG(MIO#1) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0x9100 
rst -system

# how to change boot mode to SD1(3.0) from xsct console
targets -set -nocase -filter {name =~ "*PSU*"}
stop
mwr  0xff5e0200 0xe100 
rst -system

# how to change ARTF UART to PS UART1 on petalinux
petalinux-config -> ARM Trusted Firmware Compilation Configuration -> extra ATF compilation settings -> ZYNQMP_CONSOLE=cadence1
